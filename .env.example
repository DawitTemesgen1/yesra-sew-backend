# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=yesrasew_db
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# GeezSMS Configuration (for OTP via SMS)
GEEZSMS_TOKEN=your_geezsms_api_token

# Email Configuration (for password reset via email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
SMTP_FROM="YesraSew Support" <no-reply@yesrasew.com>

# Chapa Payment Configuration (for future payment integration)
CHAPA_SECRET_KEY=your_chapa_secret_key
CHAPA_WEBHOOK_SECRET=your_chapa_webhook_secret_from_dashboard

# Subscription Plan Pricing (in ETB)
STANDARD_PLAN_PRICE=100
PREMIUM_PLAN_PRICE=200

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# API Configuration
API_VERSION=v1
